<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Things CS</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,100..900;1,100..900&display=swap');
        .details {
                position:relative;
        }
        .delete{
                position: absolute;
                top:0;
                right:0;
                border-radius:50px;
                padding:8px;
        }

        .delete:hover{
                cursor:pointer;
                box-shadow: 1px 2px 3px rgba(0,0,0,0,2);
            }

        body {
            margin: 20px auto;
            padding: 0px 20px;
            font-family: 'Noto serif', 'serif';
        }
        .site-title {
            font-size:larger;
        }

        p, h1, h2, h3, a, ul {
            margin:0;
            padding:0;
            text-decoration:none;
            color:#222;
        }

        nav {
            display: flex;
            justify-content: space-between;
            margin-bottom:60px;
            padding-bottom:10px;
            border-bottom:1px solid #ddd;
            text-transform:uppercase;
        }

        nav ul {
            display:flex;
            justify-content: space-between;
            align-items:center;
        }
        nav li {
            list-style-type: none;
            margin:20px;
        }
        nav li:hover{
            transform: scale(1.1);
        }
        .blog {
            padding-top:10px;
            padding-left:30px;
            padding-bottom:20px;
        }
        .blogs {
            padding-left:30px;
        }

        footer {
            padding-top:40px;
            align-self:center;
        }
        .text {
            padding-top:10px;
            padding-left: 20px;
            padding-right:20px;
        }
        .createdBlogs form{
            max-width:400px;
            margin: 0px auto;
        }

        .createdBlogs input, .createdBlogs textarea {
            display:block;
            width:100%;
            margin:10px 0;
            padding: 8px;
        }
        .createdBlogs label {
                display:block;
                margin-top:24px;
            }
        textarea{
            height:150px;
        }
        .createdBlogs button {
                margin-top: 20px;
                background: #222;
                color:white;
                padding: 6px;
                border:0;
                font-size:1.2em;
                cursor:pointer;
            }
    </style>
</head>
